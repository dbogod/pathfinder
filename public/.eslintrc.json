{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "$": true,
    "historicEngland": true,
    "jQuery": false,
    "YT": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "arrow-parens": 0,
    "eqeqeq": [
      "error",
      "smart"
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "max-len": [0],
    "no-console": ["error"],
    "no-else-return": "error",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxBOF": 0,
        "maxEOF": 1
      }
    ],
    "no-new": 0,
    "no-param-reassign": 0,
    "no-restricted-syntax": ["off"],
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ],
    "no-var": "error",
    "object-curly-spacing": ["error", "always"],
    "object-shorthand": 0,
    "one-var": [
      "error",
      "never"
    ],
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "react/display-name": ["off"],
    "react/no-find-dom-node": ["off"],
    "react/no-string-refs": ["off"],
    "space-before-blocks": ["error", "always"]
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  }
}